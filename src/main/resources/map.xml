<?xml version="1.0" encoding="UTF-8"?>
<map>
    <!-- Basic settings -->
    <name>Example Map</name>
    <version>1.1</version>
    <description>Kill the enemy</description>
    <authors>
        <author uuid="2b5f34f6-fb05-4852-a86c-2e03bccbdf89" description="Design">TheMolkaPL</author>
    </authors>

    <changelog>
        <version version="1.1" release="2017-03-10">
            <log>Introduce changelogs</log>
        </version>
    </changelog>

    <!-- Include global settings -->
    <include type="global">match.xml</include>

    <!-- World settings -->
    <world difficulty="easy" environment="normal" pvp="yes">
        <spawn x="0.5" y="64" z="0.5" />
    </world>

    <!-- Scoreboard settings -->
    <scoreboard>
        <title>`eMatch Goals</title>
    </scoreboard>

    <modules>
        <!-- Format -->
        <teams>
            <team id="blue-team" name="Blue Team" color="blue" friendly-fire="yes" slots="15">
                <apply match-start="yes" player-play="yes" player-respawn="yes">
                    <kit>blue-leather-armor-kit</kit>
                    <kit>my-kit</kit>

                    <spawns>
                        <region yaw="0">
                            <sphere origin-x="25" origin-y="21" origin-z="0" radius="3" />
                        </region>
                    </spawns>
                </apply>
            </team>

            <team id="red-team" name="Red Team" color="dark red" friendly-fire="yes" slots="15">
                <apply match-start="yes" player-play="yes" player-respawn="yes">
                    <kit>red-leather-armor-kit</kit>
                    <kit>my-kit</kit>

                    <spawns>
                        <region yaw="180">
                            <sphere origin-x="-25" origin-y="21" origin-z="0" radius="3" />
                        </region>
                    </spawns>
                </apply>
            </team>
        </teams>

        <!-- Objectives -->
        <leak>
            <core id="blue-core" name="Blue Core" owner="blue-team" liquid="lava" detector-level="5">
                <region>
                    <sphere origin-x="25" origin-y="16" origin-z="0" radius="3" />
                </region>
            </core>

            <core id="red-core" name="Red core" owner="red-team" liquid="lava" detector-level="5">
                <region>
                    <sphere origin-x="-25" origin-y="16" origin-z="0" radius="3" />
                </region>
            </core>
        </leak>

        <!-- Other modules -->
        <filters>
            <filter id="custom-filter">

            </filter>

            <filter id="team-lock-filter">
                <not>
                    <match-running />
                </not>
            </filter>
        </filters>

        <gamerules>
            <gamerule type="doDaylightCycle">false</gamerule>
        </gamerules>

        <join-lock>
            <rule filter="team-lock-filter">`6The match has started. `cYou can't join this game right now.</rule>
        </join-lock>
    </modules>
</map>
